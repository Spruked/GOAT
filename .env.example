# GOAT Environment Configuration
# Copy this file to .env and fill in your actual values

# GOAT System Configuration
GOAT_ENV=production
GOAT_VERSION=2.1.0
GOAT_INSTANCE_ID=goat-production

# Database Configuration
DATABASE_URL=postgresql://goat:${DB_PASSWORD}@goat-db:5432/goat
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_URL=redis://goat-redis:6379/0

# APEX DOC Integration
APEX_DOC_ENDPOINT=https://api.apex-doc.com/v1
APEX_DOC_API_KEY=your_apex_doc_api_key
APEX_DOC_PUBLIC_KEY=your_apex_doc_public_key
APEX_DOC_PRIVATE_KEY=your_apex_doc_private_key

# TrueMark Integration
TRUEMARK_ENDPOINT=https://api.truemark.com/v1
TRUEMARK_API_KEY=your_truemark_api_key
TRUEMARK_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Cryptographic Keys (Generate secure random keys)
ENCRYPTION_KEY=your_32_byte_base64_encoded_encryption_key
SIGNING_KEY=your_32_byte_base64_encoded_signing_key

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
SECRET_KEY=your_very_secure_random_secret_key
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# File Upload Configuration
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "txt", "json"]

# Monitoring and Alerts
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/goat.crt
SSL_KEY_PATH=/etc/ssl/private/goat.key

# Optional: External Services
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Optional: Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-goat-bucket
AWS_REGION=us-east-1