{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GOAT Podcast Studio SKG Schema",
  "version": "1.0.0",
  "description": "Structured Knowledge Graph for professional podcast production",
  "type": "object",
  "required": ["metadata", "show_identity", "episode_structure", "voice_config", "tone_style", "audio_production", "content_structure", "distribution"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["schema_version", "last_modified", "created_at"],
      "properties": {
        "schema_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version of this SKG schema"
        },
        "last_modified": {
          "type": "string",
          "format": "date-time"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "production_engine": {
          "type": "string",
          "enum": ["caleon", "phi3", "fallback"],
          "default": "caleon"
        },
        "mastery_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Overall production quality score from analytics"
        }
      }
    },
    "show_identity": {
      "type": "object",
      "required": ["show_title"],
      "properties": {
        "show_title": {
          "type": "string",
          "minLength": 3,
          "maxLength": 200
        },
        "show_tagline": {
          "type": "string",
          "maxLength": 300
        },
        "show_description": {
          "type": "string",
          "maxLength": 2000
        },
        "show_category": {
          "type": "string",
          "enum": [
            "Business & Entrepreneurship",
            "Technology & Innovation",
            "Education & Learning",
            "Health & Wellness",
            "Arts & Culture",
            "News & Politics",
            "Science & Research",
            "Personal Development",
            "Comedy & Entertainment",
            "True Crime & Mystery",
            "Sports & Recreation",
            "Society & Culture"
          ]
        },
        "show_artwork_url": {
          "type": "string",
          "format": "uri"
        },
        "show_language": {
          "type": "string",
          "default": "en-US"
        }
      }
    },
    "episode_structure": {
      "type": "object",
      "required": ["episode_title", "episode_type", "episode_duration"],
      "properties": {
        "episode_title": {
          "type": "string",
          "minLength": 3,
          "maxLength": 300
        },
        "episode_number": {
          "type": ["string", "integer"]
        },
        "season_number": {
          "type": ["string", "integer"]
        },
        "episode_type": {
          "type": "string",
          "enum": [
            "solo_monologue",
            "interview",
            "cohosted_conversation",
            "panel_roundtable",
            "narrative_storytelling",
            "news_commentary"
          ]
        },
        "episode_duration": {
          "type": "string",
          "enum": ["5-10", "15-20", "30-40", "45-60", "60-90", "90+"]
        },
        "release_schedule": {
          "type": "string",
          "enum": ["single", "series", "seasonal"],
          "default": "single"
        },
        "episode_format_rules": {
          "type": "object",
          "properties": {
            "max_intro_duration_seconds": {
              "type": "integer",
              "default": 30
            },
            "max_outro_duration_seconds": {
              "type": "integer",
              "default": 45
            },
            "allow_mid_roll_breaks": {
              "type": "boolean",
              "default": false
            },
            "segment_count": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            }
          }
        }
      }
    },
    "voice_config": {
      "type": "object",
      "required": ["host"],
      "properties": {
        "host": {
          "type": "object",
          "required": ["name", "voice_id"],
          "properties": {
            "name": {
              "type": "string"
            },
            "voice_id": {
              "type": "string"
            },
            "voice_provider": {
              "type": "string",
              "enum": ["elevenlabs", "openai", "azure", "local"],
              "default": "elevenlabs"
            },
            "speaking_rate": {
              "type": "number",
              "minimum": 0.5,
              "maximum": 2.0,
              "default": 1.0
            },
            "pitch_adjustment": {
              "type": "number",
              "minimum": -10,
              "maximum": 10,
              "default": 0
            }
          }
        },
        "cohost": {
          "type": ["object", "null"],
          "properties": {
            "name": {
              "type": "string"
            },
            "voice_id": {
              "type": "string"
            },
            "voice_provider": {
              "type": "string",
              "enum": ["elevenlabs", "openai", "azure", "local"]
            },
            "speaking_rate": {
              "type": "number",
              "minimum": 0.5,
              "maximum": 2.0,
              "default": 1.0
            },
            "pitch_adjustment": {
              "type": "number",
              "minimum": -10,
              "maximum": 10,
              "default": 0
            }
          }
        },
        "guest": {
          "type": ["object", "null"],
          "properties": {
            "name": {
              "type": "string"
            },
            "voice_id": {
              "type": "string"
            },
            "voice_provider": {
              "type": "string",
              "enum": ["elevenlabs", "openai", "azure", "local"]
            }
          }
        },
        "dialogue_rules": {
          "type": "object",
          "properties": {
            "min_turn_length_words": {
              "type": "integer",
              "default": 20
            },
            "max_turn_length_words": {
              "type": "integer",
              "default": 150
            },
            "allow_interruptions": {
              "type": "boolean",
              "default": false
            },
            "natural_overlap_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 20,
              "default": 5
            }
          }
        }
      }
    },
    "tone_style": {
      "type": "object",
      "required": ["conversation_style"],
      "properties": {
        "conversation_style": {
          "type": "string",
          "enum": [
            "Casual & Friendly",
            "Professional & Polished",
            "Educational & Informative",
            "Entertaining & Humorous",
            "Investigative & Analytical",
            "Inspirational & Motivational",
            "Debate & Discussion",
            "Storytelling & Narrative"
          ]
        },
        "pacing": {
          "type": "string",
          "enum": ["Relaxed", "Moderate", "Brisk", "Dynamic"]
        },
        "energy_level": {
          "type": "string",
          "enum": ["Calm", "Balanced", "Energetic", "High-Energy"]
        },
        "formality": {
          "type": "string",
          "enum": ["Informal", "Semi-Formal", "Professional", "Academic"]
        },
        "emotional_tone_profile": {
          "type": "object",
          "properties": {
            "warmth": {
              "type": "number",
              "minimum": 0,
              "maximum": 10
            },
            "enthusiasm": {
              "type": "number",
              "minimum": 0,
              "maximum": 10
            },
            "authority": {
              "type": "number",
              "minimum": 0,
              "maximum": 10
            },
            "empathy": {
              "type": "number",
              "minimum": 0,
              "maximum": 10
            }
          }
        },
        "language_rules": {
          "type": "object",
          "properties": {
            "vocabulary_level": {
              "type": "string",
              "enum": ["simple", "conversational", "professional", "technical", "academic"]
            },
            "use_contractions": {
              "type": "boolean",
              "default": true
            },
            "allow_slang": {
              "type": "boolean",
              "default": false
            },
            "max_sentence_length_words": {
              "type": "integer",
              "default": 25
            }
          }
        }
      }
    },
    "audio_production": {
      "type": "object",
      "properties": {
        "intro_music": {
          "type": "object",
          "properties": {
            "style": {
              "type": "string",
              "enum": [
                "Modern Electronic",
                "Upbeat Indie",
                "Corporate Professional",
                "Jazz & Lounge",
                "Cinematic Orchestral",
                "Ambient Atmospheric",
                "Rock & Guitar",
                "Hip Hop Beats",
                "None"
              ]
            },
            "duration_seconds": {
              "type": "integer",
              "minimum": 0,
              "maximum": 60,
              "default": 15
            },
            "fade_duration_seconds": {
              "type": "integer",
              "default": 3
            },
            "volume_db": {
              "type": "number",
              "minimum": -60,
              "maximum": 0,
              "default": -18
            }
          }
        },
        "outro_music": {
          "type": "object",
          "properties": {
            "style": {
              "type": "string",
              "enum": [
                "Modern Electronic",
                "Upbeat Indie",
                "Corporate Professional",
                "Jazz & Lounge",
                "Cinematic Orchestral",
                "Ambient Atmospheric",
                "Rock & Guitar",
                "Hip Hop Beats",
                "None"
              ]
            },
            "duration_seconds": {
              "type": "integer",
              "default": 20
            },
            "fade_duration_seconds": {
              "type": "integer",
              "default": 5
            },
            "volume_db": {
              "type": "number",
              "default": -18
            }
          }
        },
        "transition_style": {
          "type": "string",
          "enum": ["Smooth Fade", "Quick Cut", "Music Sting", "Sound Effect", "None"]
        },
        "background_music_bed": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "volume_db": {
              "type": "number",
              "minimum": -60,
              "maximum": -10,
              "default": -35
            },
            "style": {
              "type": "string",
              "enum": ["ambient", "subtle", "none"]
            }
          }
        },
        "sound_effects": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "types_allowed": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["transition", "emphasis", "ambient", "notification"]
              }
            }
          }
        },
        "mastering_profile": {
          "type": "object",
          "properties": {
            "target_lufs": {
              "type": "number",
              "default": -16
            },
            "compression_ratio": {
              "type": "number",
              "minimum": 1,
              "maximum": 10,
              "default": 3
            },
            "eq_preset": {
              "type": "string",
              "enum": ["podcast_standard", "voice_clarity", "warm_broadcast", "crisp_modern"]
            },
            "noise_reduction_level": {
              "type": "string",
              "enum": ["none", "light", "moderate", "aggressive"]
            }
          }
        }
      }
    },
    "content_structure": {
      "type": "object",
      "required": ["episode_outline"],
      "properties": {
        "opening_hook": {
          "type": "string",
          "maxLength": 1000,
          "description": "Attention-grabbing opening statement"
        },
        "episode_outline": {
          "type": "string",
          "minLength": 10,
          "description": "Structured outline of episode segments"
        },
        "key_talking_points": {
          "type": "string",
          "description": "Main discussion points and arguments"
        },
        "research_sources": {
          "type": "string",
          "description": "Citations and reference materials"
        },
        "closing_statement": {
          "type": "string",
          "maxLength": 1000,
          "description": "Summary and final thoughts"
        },
        "segment_breakdown": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "segment_name": {
                "type": "string"
              },
              "duration_minutes": {
                "type": "integer"
              },
              "content_type": {
                "type": "string",
                "enum": ["intro", "main_content", "interview", "discussion", "story", "outro"]
              },
              "key_points": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "scriptwriting_rules": {
          "type": "object",
          "properties": {
            "write_full_script": {
              "type": "boolean",
              "default": false
            },
            "bullet_points_only": {
              "type": "boolean",
              "default": true
            },
            "allow_improvisation": {
              "type": "boolean",
              "default": true
            },
            "maintain_natural_flow": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "distribution": {
      "type": "object",
      "properties": {
        "target_audience": {
          "type": "string"
        },
        "listener_experience_level": {
          "type": "string",
          "enum": [
            "Beginner (No prior knowledge)",
            "Intermediate (Some familiarity)",
            "Advanced (Industry professionals)",
            "Mixed (All levels welcome)"
          ]
        },
        "distribution_channels": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Apple Podcasts",
              "Spotify",
              "YouTube",
              "Google Podcasts",
              "Amazon Music",
              "RSS Feed Only"
            ]
          }
        },
        "episode_tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "call_to_action": {
          "type": "string"
        },
        "sponsor_mention": {
          "type": "string"
        },
        "explicit_content": {
          "type": "boolean",
          "default": false
        },
        "seo_optimization": {
          "type": "object",
          "properties": {
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description_length": {
              "type": "string",
              "enum": ["short", "medium", "long"]
            }
          }
        }
      }
    },
    "analytics_feedback": {
      "type": "object",
      "description": "Performance metrics that update the SKG",
      "properties": {
        "listener_retention": {
          "type": "object",
          "properties": {
            "average_completion_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "drop_off_points": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "timestamp_seconds": {
                    "type": "integer"
                  },
                  "drop_percentage": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "voice_performance": {
          "type": "object",
          "properties": {
            "clarity_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "naturalness_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "pacing_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "engagement_metrics": {
          "type": "object",
          "properties": {
            "listener_count": {
              "type": "integer"
            },
            "average_rating": {
              "type": "number",
              "minimum": 0,
              "maximum": 5
            },
            "share_count": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
